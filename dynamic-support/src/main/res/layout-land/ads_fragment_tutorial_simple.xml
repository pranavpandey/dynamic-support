<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/ads_tutorial_simple"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="horizontal">

    <com.pranavpandey.android.dynamic.support.widget.DynamicImageView
        android:id="@+id/ads_tutorial_simple_image"
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_weight="@integer/ads_weight_tutorial_image"
        android:layout_gravity="center_vertical"
        android:padding="@dimen/ads_tutorial_margin" />

    <com.pranavpandey.android.dynamic.support.widget.DynamicNestedScrollView
        style="@style/Widget.DynamicApp.Scroller.Vertical.Clip"
        android:id="@+id/ads_tutorial_simple_scroller"
        android:layout_width="0dp"
        android:layout_weight="@integer/ads_weight_tutorial_text"
        android:layout_height="wrap_content"
        android:layout_gravity="center_vertical"
        app:adt_windowInsets="false">

        <com.pranavpandey.android.dynamic.support.widget.DynamicCardView
            style="@style/Widget.DynamicApp.Card.Margin"
            android:id="@+id/ads_tutorial_simple_card">

            <LinearLayout
                style="@style/Widget.DynamicApp.Content.Card"
                android:orientation="vertical">

                <com.pranavpandey.android.dynamic.support.widget.DynamicTextView
                    style="@style/TextAppearance.DynamicApp.Headline5.Tutorial"
                    android:id="@+id/ads_tutorial_simple_title"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content" />

                <com.pranavpandey.android.dynamic.support.widget.DynamicTextView
                    style="@style/TextAppearance.DynamicApp.Subtitle1.Tutorial"
                    android:id="@+id/ads_tutorial_simple_subtitle"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content" />

                <com.pranavpandey.android.dynamic.support.widget.DynamicTextView
                    style="@style/TextAppearance.DynamicApp.Body1.Tutorial"
                    android:id="@+id/ads_tutorial_simple_description"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/ads_margin_tiny" />

            </LinearLayout>

        </com.pranavpandey.android.dynamic.support.widget.DynamicCardView>

    </com.pranavpandey.android.dynamic.support.widget.DynamicNestedScrollView>

</LinearLayout>
