<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    style="@style/Widget.DynamicApp.Content.Card.Clickable.Background"
    android:id="@+id/ads_item_view"
    android:gravity="center"
    android:orientation="horizontal"
    android:alpha="@integer/ads_alpha_empty_view">

    <com.pranavpandey.android.dynamic.support.widget.DynamicImageView
        style="@style/Widget.DynamicApp.Image.Empty"
        android:id="@+id/ads_item_view_icon"
        android:layout_marginRight="@dimen/ads_margin_normal"
        android:layout_marginEnd="@dimen/ads_margin_normal"
        android:layout_gravity="center_vertical" />

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_vertical"
        android:gravity="center_horizontal"
        android:orientation="vertical">

        <com.pranavpandey.android.dynamic.support.widget.DynamicTextView
            style="@style/TextAppearance.DynamicApp.Headline6"
            android:id="@+id/ads_item_view_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="center_horizontal"
            android:textAllCaps="true"
            app:adt_rtlSupport="false" />

        <com.pranavpandey.android.dynamic.support.widget.DynamicTextView
            style="@style/TextAppearance.DynamicApp.Subtitle1.Secondary"
            android:id="@+id/ads_item_view_subtitle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="center_horizontal"
            app:adt_rtlSupport="false" />

    </LinearLayout>

</LinearLayout>
