<com.pranavpandey.android.dynamic.support.widget.DynamicFrameLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    style="@style/Widget.DynamicApp.Content.Card.Small.Clickable.Background"
    android:id="@+id/ads_color_picker_popup_footer"
    app:adt_contrastWithColorType="surface">

    <LinearLayout
        style="@style/Widget.DynamicApp.Content.Row.Horizontal"
        android:baselineAligned="false">

        <LinearLayout
            style="@style/Widget.DynamicApp.Content.Row.Vertical.Weight">

            <com.pranavpandey.android.dynamic.support.widget.DynamicTextView
                style="@style/TextAppearance.DynamicApp.Subtitle1.Caps"
                android:id="@+id/ads_color_picker_popup_footer_title"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/ads_more"
                app:adt_contrastWithColorType="surface" />

            <com.pranavpandey.android.dynamic.support.widget.DynamicTextView
                style="@style/TextAppearance.DynamicApp.Body1"
                android:id="@+id/ads_color_picker_popup_footer_subtitle"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:visibility="gone"
                app:adt_contrastWithColorType="surface" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/ads_margin_tiny"
            android:layout_marginStart="@dimen/ads_margin_tiny"
            android:layout_gravity="center_vertical"
            android:orientation="horizontal">

            <com.pranavpandey.android.dynamic.support.picker.color.DynamicColorView
                style="@style/Widget.DynamicApp.ColorView"
                android:id="@+id/ads_color_picker_popup_footer_view_default"
                android:layout_width="@dimen/ads_icon_popup_footer"
                android:layout_height="@dimen/ads_icon_popup_footer"
                android:layout_marginLeft="@dimen/ads_margin_small"
                android:layout_marginStart="@dimen/ads_margin_small"
                android:visibility="gone"
                app:adt_contrastWithColorType="surface" />

            <com.pranavpandey.android.dynamic.support.widget.DynamicImageView
                android:id="@+id/ads_color_picker_popup_footer_image"
                android:layout_width="@dimen/ads_icon_popup_footer"
                android:layout_height="@dimen/ads_icon_popup_footer"
                android:layout_marginLeft="@dimen/ads_margin_small"
                android:layout_marginStart="@dimen/ads_margin_small"
                android:visibility="gone"
                app:srcCompat="@drawable/ads_ic_picker"
                app:adt_colorType="accent"
                app:adt_contrastWithColorType="surface" />

            <com.pranavpandey.android.dynamic.support.picker.color.DynamicColorView
                style="@style/Widget.DynamicApp.ColorView"
                android:id="@+id/ads_color_picker_popup_footer_view"
                android:layout_width="@dimen/ads_icon_popup_footer"
                android:layout_height="@dimen/ads_icon_popup_footer"
                android:layout_marginLeft="@dimen/ads_margin_small"
                android:layout_marginStart="@dimen/ads_margin_small"
                android:visibility="gone"
                app:adt_contrastWithColorType="surface" />

            <LinearLayout
                android:id="@+id/ads_color_picker_popup_footer_recent"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:visibility="gone">

                <com.pranavpandey.android.dynamic.support.widget.DynamicDivider
                    style="@style/Widget.DynamicApp.Divider.Vertical.Large"
                    android:id="@+id/ads_color_picker_popup_footer_divider"
                    app:adt_contrastWithColorType="surface" />

                <com.pranavpandey.android.dynamic.support.picker.color.DynamicColorView
                    style="@style/Widget.DynamicApp.ColorView"
                    android:id="@+id/ads_color_picker_popup_footer_view_recent"
                    android:layout_width="@dimen/ads_icon_popup_footer"
                    android:layout_height="@dimen/ads_icon_popup_footer"
                    android:layout_gravity="center_vertical"
                    app:adt_contrastWithColorType="surface" />

            </LinearLayout>

        </LinearLayout>

    </LinearLayout>

</com.pranavpandey.android.dynamic.support.widget.DynamicFrameLayout>
