<com.pranavpandey.android.dynamic.support.widget.DynamicFrameLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    style="@style/Widget.DynamicApp.Content.Card.Clickable.Background"
    android:id="@+id/ads_backup_view">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingLeft="@dimen/ads_margin_regular"
        android:paddingRight="@dimen/ads_margin_regular"
        android:orientation="horizontal">

        <com.pranavpandey.android.dynamic.support.widget.DynamicImageView
            style="@style/Widget.DynamicApp.Image.Preference"
            android:id="@+id/ads_preference_icon"
            app:srcCompat="@drawable/ads_ic_folder" />

        <LinearLayout
            style="@style/Widget.DynamicApp.Content.Row.Vertical.Weight">

            <com.pranavpandey.android.dynamic.support.widget.DynamicTextView
                style="@style/TextAppearance.DynamicApp.Headline5.Card"
                android:id="@+id/ads_backup_title"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" />

            <com.pranavpandey.android.dynamic.support.widget.DynamicTextView
                style="@style/TextAppearance.DynamicApp.Subtitle1.Secondary"
                android:id="@+id/ads_backup_subtitle"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" />

        </LinearLayout>

        <com.pranavpandey.android.dynamic.support.widget.DynamicImageView
            android:id="@+id/ads_backup_options"
            android:layout_width="@dimen/ads_icon_preference_big"
            android:layout_height="@dimen/ads_icon_preference_big"
            android:layout_marginLeft="@dimen/ads_page_horizontal_margin"
            android:layout_marginStart="@dimen/ads_page_horizontal_margin"
            android:layout_gravity="center_vertical"
            android:padding="@dimen/ads_margin_tiny"
            android:background="?attr/selectableItemBackgroundBorderless"
            app:srcCompat="@drawable/ads_ic_more"
            app:ads_colorType="accent" />

    </LinearLayout>

</com.pranavpandey.android.dynamic.support.widget.DynamicFrameLayout>
