<FrameLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/ads_toast"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <com.pranavpandey.android.dynamic.support.widget.DynamicCardView
        style="?attr/ads_widgetCardFloatingToast"
        android:id="@+id/ads_toast_card">

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:gravity="center"
            android:paddingLeft="@dimen/ads_margin_toast_horizontal"
            android:paddingStart="@dimen/ads_margin_toast_horizontal"
            android:paddingTop="@dimen/ads_margin_toast_vertical"
            android:paddingRight="@dimen/ads_margin_toast_horizontal"
            android:paddingEnd="@dimen/ads_margin_toast_horizontal"
            android:paddingBottom="@dimen/ads_margin_toast_vertical"
            android:orientation="horizontal"
            android:background="@android:color/transparent">

            <ImageView
                android:id="@+id/ads_toast_icon"
                android:layout_width="@dimen/ads_icon_toast"
                android:layout_height="@dimen/ads_icon_toast"
                android:layout_marginRight="@dimen/ads_margin_toast_small"
                android:layout_marginEnd="@dimen/ads_margin_toast_small"
                android:contentDescription="@null" />

            <TextView
                android:id="@+id/ads_toast_text"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="left|start"
                android:textAlignment="viewStart"
                android:textSize="@dimen/ads_font_toast" />

        </LinearLayout>

    </com.pranavpandey.android.dynamic.support.widget.DynamicCardView>

</FrameLayout>
