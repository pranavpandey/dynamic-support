        <!-- Background aware options to adjust colors accordingly. -->
        <attr name="ads_backgroundAware" format="enum">
            <!-- Constant for the automatic background aware. -->
            <enum name="auto" value="-3" />
            <!-- Constant to disable the background aware. -->
            <enum name="disable" value="0" />
            <!-- Constant to enable the background aware. -->
            <enum name="enable" value="1" />
