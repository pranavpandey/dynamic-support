<resources>

    <!-- The set of attributes that describe a DynamicDialog's theme. -->
    <declare-styleable name="DynamicDialog">
        <attr name="android:layout" />
        <attr name="add_buttonPanelSideLayout" format="reference" />
        <attr name="add_alertDialogCenterButtons" format="boolean" />
        <attr name="add_listLayout" format="reference" />
        <attr name="add_multiChoiceItemLayout" format="reference" />
        <attr name="add_singleChoiceItemLayout" format="reference" />
        <attr name="add_listItemLayout" format="reference" />
        <attr name="add_showTitle" format="boolean" />
        <attr name="add_buttonIconDimen" format="dimension" />
    </declare-styleable>

    <!-- The set of attributes for the dialog list view. -->
    <declare-styleable name="RecycleListView">
        <!-- Bottom padding to use when no buttons are present. -->
        <attr name="add_paddingBottomNoButtons" format="dimension" />
        <!-- Top padding to use when no title is present. -->
        <attr name="add_paddingTopNoTitle" format="dimension" />
    </declare-styleable>

</resources>
