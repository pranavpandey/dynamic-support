<resources>

    <!-- Attributes for the DynamicInfo. -->
    <declare-styleable name="DynamicInfo">
        <!-- Drawable that will be applied to this view. -->
        <attr name="ads_icon" format="reference" />
        <!-- Title that will be applied to this view. -->
        <attr name="ads_title" format="string" />
        <!-- Subtitle that will be applied to this view. -->
        <attr name="ads_subtitle" format="string" />
        <!-- Optional description that will be applied to this view. -->
        <attr name="ads_description" format="string" />
        <!-- Optional status that will be applied to this view. -->
        <attr name="ads_status" format="string" />
        <!-- Optional big drawable that will be applied to this view. -->
        <attr name="ads_iconBig" format="reference" />
        <!-- true to show the divider below this view. -->
        <attr name="ads_showDivider" format="boolean" />
        <!-- Links array that will be applied to this view. -->
        <attr name="ads_links" format="reference" />
        <!-- Optional links subtitle array that will be applied to this view. -->
        <attr name="ads_subtitles" format="reference" />
        <!-- Optional links icon array that will be applied to this view. -->
        <attr name="ads_icons" format="reference" />
        <!-- Links url array that will be applied to this view. -->
        <attr name="ads_urls" format="reference" />
        <!-- Optional links color array that will be applied to this view. -->
        <attr name="ads_colors" format="reference" />
        <!-- true to fill the empty icon space if applicable. -->
        <attr name="ads_fillSpace" format="boolean" />
    </declare-styleable>

    <!-- Attributes for the DynamicHeader. -->
    <declare-styleable name="DynamicHeader">
        <attr name="ads_icon" />
        <attr name="ads_title" />
        <attr name="ads_subtitle" />
        <!-- true to display the icon. -->
        <attr name="ads_showIcon" format="boolean" />
    </declare-styleable>

    <!-- Attributes for the DynamicInfoView. -->
    <declare-styleable name="DynamicInfoView">
        <attr name="ads_icon" />
        <attr name="ads_title" />
        <attr name="ads_subtitle" />
        <attr name="ads_description" />
        <attr name="ads_status" />
        <attr name="ads_iconBig" />
        <attr name="ads_links" />
        <attr name="ads_subtitles" />
        <attr name="ads_urls" />
        <attr name="ads_icons" />
        <attr name="ads_colors" />
    </declare-styleable>

    <!-- Attributes for the DynamicItemView. -->
    <declare-styleable name="DynamicItemView">
        <attr name="ads_icon" />
        <attr name="ads_title" />
        <attr name="ads_subtitle" />
        <attr name="ads_showDivider" />
        <attr name="ads_fillSpace" />
        <attr name="ads_colorType" />
        <attr name="ads_color" />
    </declare-styleable>

    <!-- Attributes for the DynamicPopup. -->
    <declare-styleable name="DynamicPopup">
        <!-- true to enable quick popup for the supported views. -->
        <attr name="ads_popup" format="boolean" />
        <!-- View types supported by the popup. -->
        <attr name="ads_popupType" format="enum">
            <!-- Constant for default view type. -->
            <enum name="none" value="-1" />
            <!-- Constant for list view type. -->
            <enum name="list" value="0" />
            <!-- Constant for grid view type. -->
            <enum name="grid" value="1" />
        </attr>
        <!-- An array of colors to be displayed in the picker popup. -->
        <attr name="ads_popupColors" format="reference" />
        <!-- An array of colors to be displayed in the alternate picker popup. -->
        <attr name="ads_altPopupColors" format="reference" />
    </declare-styleable>

    <!-- Attributes for the DynamicColorView. -->
    <declare-styleable name="DynamicColorView">
        <!-- Shape options for the dynamic color view. -->
        <attr name="ads_shape" format="enum">
            <!-- Constant for the circle color shape. -->
            <enum name="circle" value="0" />
            <!-- Constant for the square color shape. -->
            <enum name="square" value="1" />
            <!-- Constant for the rectangle color shape. -->
            <enum name="rectangle" value="2" />
        </attr>
        <!-- Color value for the dynamic color view. -->
        <attr name="ads_color" />
        <!-- true to enable alpha for the color. -->
        <attr name="ads_alphaEnabled" format="boolean" />
        <!-- Corner radius in case of square or rectangle shape. -->
        <attr name="ads_cornerRadius" />
    </declare-styleable>

    <!-- Attributes for the DynamicColorPicker. -->
    <declare-styleable name="DynamicColorPicker">
        <!-- An array of colors to be displayed in the picker. -->
        <attr name="ads_colors" />
        <!-- true to enable alpha for the colors. -->
        <attr name="ads_alphaEnabled" />
        <!-- An array of colors to be displayed in the picker popup. -->
        <attr name="ads_popupColors" />
        <!-- An array of colors to be displayed in the alternate picker popup. -->
        <attr name="ads_altPopupColors" />
    </declare-styleable>

    <!-- Attributes for the DynamicPreference. -->
    <declare-styleable name="DynamicPreference">
        <!-- Contrast with color type for the preference layout. -->
        <attr name="ads_contrastWithColorType" />
        <!-- Contrast with color for the preference layout. -->
        <attr name="ads_contrastWithColor" />
        <!-- Background aware options for the preference layout. -->
        <attr name="ads_backgroundAware" />
        <!-- Drawable that will be applied to this preference. -->
        <attr name="ads_icon" />
        <!-- Title that will be applied to this preference. -->
        <attr name="ads_title" />
        <!-- Optional summary that will be applied to this preference. -->
        <attr name="ads_summary" format="string" />
        <!-- Optional description that will be applied to this preference. -->
        <attr name="ads_description" />
        <!-- Default preference value that will be applied to this preference. -->
        <attr name="ads_value" format="string" />
        <!-- Shared preference key that will be applied to this preference. -->
        <attr name="ads_key" format="string" />
        <!-- Shared preference key that will be applied to the alternate preference. -->
        <attr name="ads_altKey" format="string" />
        <!-- true to disable this preference by default. -->
        <attr name="ads_enabled" format="boolean" />
        <!-- Shared preference key of other preference to make it dependent on that preference. -->
        <attr name="ads_dependency" format="string" />
        <!-- Text for the optional action button. -->
        <attr name="ads_action" format="string" />
    </declare-styleable>

    <!-- Attributes for the DynamicCheckPreference. -->
    <declare-styleable name="DynamicCheckPreference">
        <!-- true to make this preference checked by default. -->
        <attr name="ads_checked" format="boolean" />
        <!-- Optional summary to show if the preference is in the unchecked state. -->
        <attr name="ads_unchecked" format="string" />
    </declare-styleable>

    <!-- Attributes for the DynamicColorPreference. -->
    <declare-styleable name="DynamicColorPreference">
        <attr name="ads_color" />
        <attr name="ads_altColor" />
        <attr name="ads_popup" />
        <attr name="ads_shape" />
        <attr name="ads_alphaEnabled" />
        <attr name="ads_colors" />
        <attr name="ads_popupColors" />
        <attr name="ads_altPopupColors" />
    </declare-styleable>

    <!-- Attributes for the DynamicImagePreference. -->
    <declare-styleable name="DynamicImagePreference">
        <!-- Image drawable that will be applied to this preference. -->
        <attr name="ads_image" format="reference" />
    </declare-styleable>

    <!-- Attributes for the DynamicSeekBarPreference. -->
    <declare-styleable name="DynamicSeekBarPreference">
        <!-- Maximum value that will be applied to the seek bar. -->
        <attr name="ads_max" format="integer" />
        <!-- Minimum value that will be applied to the seek bar. -->
        <attr name="ads_min" format="integer" />
        <!-- Progress value that will be applied to the seek bar. -->
        <attr name="ads_progress" format="integer" />
        <!-- Progress interval that will be applied to the seek bar. -->
        <attr name="ads_interval" format="integer" />
        <!-- Optional text which will be shown after the progress value. -->
        <attr name="ads_unit" format="string" />
        <!-- true to show the optional seek bar controls to increment or decrement the seek bar
             value by one. -->
        <attr name="ads_controls" format="boolean" />
        <!-- false to disable the seek bar. -->
        <attr name="ads_seek_bar" format="boolean" />
    </declare-styleable>

    <!-- Attributes for the DynamicSpinnerPreference. -->
    <declare-styleable name="DynamicSpinnerPreference">
        <!-- Selected index value for this preference. -->
        <attr name="ads_value" />
        <!-- Preference entries that will be used by this preference. -->
        <attr name="ads_entries" format="reference" />
        <!-- Preference values that will be used by this preference. -->
        <attr name="ads_values" format="reference" />
        <!-- View types supported by the popup. -->
        <attr name="ads_popupType" />
    </declare-styleable>

    <!-- Attributes for the DynamicThemePreference. -->
    <declare-styleable name="ThemePreference">
        <!-- Dynamic theme that will be applied to this preference. -->
        <attr name="ads_theme" />
    </declare-styleable>

    <!-- Attributes for the DynamicThemePreference. -->
    <declare-styleable name="DynamicThemePreference">
        <!-- Dynamic theme that will be applied to this preference. -->
        <attr name="ads_theme" />
    </declare-styleable>

</resources>
