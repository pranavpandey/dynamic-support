<resources>

    <!-- Application theme -->
    <style name="Theme.DynamicApp" parent="Base.DynamicApp.NoActionBar">
        <item name="android:windowContentTransitions">true</item>
        <item name="android:windowAllowEnterTransitionOverlap">true</item>
        <item name="android:windowAllowReturnTransitionOverlap">true</item>
        <item name="android:windowDrawsSystemBarBackgrounds">true</item>
        <item name="android:statusBarColor">@android:color/transparent</item>
        <item name="android:navigationBarColor">@color/ads_navigation_color</item>
    </style>

    <style name="Theme.DynamicApp.Dark" parent="Base.DynamicApp.Dark.NoActionBar">
        <item name="android:windowContentTransitions">true</item>
        <item name="android:windowAllowEnterTransitionOverlap">true</item>
        <item name="android:windowAllowReturnTransitionOverlap">true</item>
        <item name="android:windowDrawsSystemBarBackgrounds">true</item>
        <item name="android:statusBarColor">@android:color/transparent</item>
        <item name="android:navigationBarColor">@color/ads_navigation_color</item>
    </style>

    <style name="Theme.DynamicApp.Light" parent="Base.DynamicApp.Light.NoActionBar">
        <item name="android:windowContentTransitions">true</item>
        <item name="android:windowAllowEnterTransitionOverlap">true</item>
        <item name="android:windowAllowReturnTransitionOverlap">true</item>
        <item name="android:windowDrawsSystemBarBackgrounds">true</item>
        <item name="android:statusBarColor">@android:color/transparent</item>
        <item name="android:navigationBarColor">@color/ads_navigation_color</item>
    </style>

    <style name="Theme.DynamicApp.DayNight" parent="Base.DynamicApp.DayNight.NoActionBar">
        <item name="android:windowContentTransitions">true</item>
        <item name="android:windowAllowEnterTransitionOverlap">true</item>
        <item name="android:windowAllowReturnTransitionOverlap">true</item>
        <item name="android:windowDrawsSystemBarBackgrounds">true</item>
        <item name="android:statusBarColor">@android:color/transparent</item>
        <item name="android:navigationBarColor">@color/ads_navigation_color</item>
    </style>

    <style name="Theme.DynamicApp.Translucent">
        <item name="android:windowTranslucentStatus">true</item>
    </style>

    <style name="Theme.DynamicApp.Dark.Translucent">
        <item name="android:windowTranslucentStatus">true</item>
    </style>

    <style name="Theme.DynamicApp.Light.Translucent">
        <item name="android:windowTranslucentStatus">true</item>
    </style>

    <style name="Theme.DynamicApp.DayNight.Translucent">
        <item name="android:windowTranslucentStatus">true</item>
    </style>

    <!-- Widget -->
    <style name="Widget.DynamicApp.Button.ImageButton">
        <item name="android:padding">0dp</item>
        <item name="android:background">?attr/selectableItemBackgroundBorderless</item>
        <item name="ads_styleBorderless">true</item>
        <item name="ads_tintBackground">false</item>
    </style>

    <style name="Widget.DynamicApp.Button.Remote">
        <item name="android:background">@drawable/ads_button_remote</item>
    </style>

    <style name="Widget.DynamicApp.Button.Remote.Borderless">
        <item name="android:padding">2dp</item>
        <item name="android:background">@drawable/ads_button_remote_borderless</item>
    </style>

</resources>